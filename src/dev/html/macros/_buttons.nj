{% macro btnBase(text = "", type="button", color="", dataType=null, dataValue=[], class = "", id = "") %}
  <button type="{{type}}"
        {% if class %}
        class="az-btn {{color}} {{ class }}"
        {% elif color %}
        class="az-btn {{color}}"
        {% else %}
        class="az-btn"
        {% endif %}

        {% if dataType %}
          {% for item in dataType %}
            data-{{item}}="{{dataValue[loop.index - 1]}}"
          {% endfor %}
        {% endif %}

        {% if id %}
        id="{{id}}"
        {% endif %}
        >
    <span>
      {{ text }}
    </span>
  </button>
{% endmacro %}